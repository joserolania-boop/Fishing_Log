{
  "expo": {
    "name": "Fishing Log",
    "slug": "fishing-log",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fishinglog",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fishinglog.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture photos of your fishing catches.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to attach photos to your fishing catches.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to record where you caught your fish."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1E88E5",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fishinglog.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E88E5",
          "dark": {
            "backgroundColor": "#0D47A1"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you attach images to your fishing catches.",
          "cameraPermission": "The app accesses your camera to let you take photos of your catches."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Fishing Log to use your location to record where you caught your fish."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
